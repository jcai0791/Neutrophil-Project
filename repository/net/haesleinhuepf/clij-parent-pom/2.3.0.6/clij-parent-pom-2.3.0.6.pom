    <issueManagement>
        <system>GitHub Issues</system>
        <url>https://github.com/clij/clij-parent-pom/issues
        </url>
    </issueManagement>
    <ciManagement>
        <system>None</system>
    </ciManagement>

    <properties>
        <package-name>net.haesleinhuepf</package-name>
        <license.licenseName>bsd_3</license.licenseName>
        <license.copyrightOwners>Robert Haase, MPI CBG</license.copyrightOwners>

        <clij_.version>1.8.0.6</clij_.version>
        <clij_core.version>1.8.0.6</clij_core.version>
        <clij_docs.version>1.8.0.4</clij_docs.version>
        <clij_ops.version>1.8.0.4</clij_ops.version>
        <clij_custom_convolution_plugin.version>1.8.0.4</clij_custom_convolution_plugin.version>

        <clij.coremem.version>2.3.0.4</clij.coremem.version>
        <clij_clearcl.version>2.3.0.4</clij_clearcl.version>

        <clij2_.version>2.3.0.6</clij2_.version>
        <clij2_code_generators_.version>2.3.0.6</clij2_code_generators_.version>
        <clij2_docs_.version>2.3.0.6</clij2_docs_.version>
        <clij2_tests_.version>2.3.0.6</clij2_tests_.version>

        <clijx_.version>0.31.0.6</clijx_.version>
        <clijx_weka_.version>0.31.0.6</clijx_weka_.version>

        <clijx_assistant.version>0.5.0.6</clijx_assistant.version>
        <clijx_assistant_bonej_extensions.version>0.5.0.6</clijx_assistant_bonej_extensions.version>
        <clijx_assistant_ij3dsuite_extensions.version>0.5.0.6</clijx_assistant_ij3dsuite_extensions.version>
        <clijx_assistant_morpholibj_extensions.version>0.5.0.6</clijx_assistant_morpholibj_extensions.version>
        <clijx_assistant_imagej_extensions.version>0.5.0.6</clijx_assistant_imagej_extensions.version>
        <clijx_assistant_imagej2_extensions.version>0.5.0.6</clijx_assistant_imagej2_extensions.version>
        <clijx_assistant_imglib2_extensions.version>0.5.0.6</clijx_assistant_imglib2_extensions.version>
        <clijx_assistant_simpleitk_extensions.version>0.5.0.6</clijx_assistant_simpleitk_extensions.version>

        <clatlab.version>2.3.0.6</clatlab.version>
        <clatlabx.version>0.31.0.6</clatlabx.version>
        <clicy.version>2.3.0.6</clicy.version>
        <clij2imagej1.version>2.3.0.6</clij2imagej1.version>
        <clupath.version>0.4.0.6</clupath.version>

        <jocl.version>2.0.2</jocl.version>
        <bridj.version>0.7.0</bridj.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij-coremem</artifactId>
                <version>${clij.coremem.version}</version>
            </dependency>				
			<dependency>
				<groupId>org.jocl</groupId>
				<artifactId>jocl</artifactId>
				<version>${jocl.version}</version>
			</dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij-clearcl</artifactId>
                <version>${clij_clearcl.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij_</artifactId>
                <version>${clij_.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij-core</artifactId>
                <version>${clij_core.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij_custom_convolution_plugin</artifactId>
                <version>${clij_custom_convolution_plugin.version}</version>
            </dependency>
            <dependency>
                <groupId>com.nativelibs4java</groupId>
                <artifactId>bridj</artifactId>
                <version>${bridj.version}</version>
            </dependency>


            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij2_</artifactId>
                <version>${clij2_.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij2-docs_</artifactId>
                <version>${clij2-docs_.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij2_code_generators_</artifactId>
                <version>${clij2_.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij2_tests_</artifactId>
                <version>${clij2_tests_.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx_</artifactId>
                <version>${clijx_.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-weka_</artifactId>
                <version>${clijx_weka_.version}</version>
            </dependency>

            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clatlab</artifactId>
                <version>${clatlab.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clicy</artifactId>
                <version>${clicy.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant_</artifactId>
                <version>${clijx_assistant.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clupath_</artifactId>
                <version>${clupath.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clij2-imagej1_</artifactId>
                <version>${clij2imagej1.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant-bonej_</artifactId>
                <version>${clijx_assistant_bonej_extensions.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant-imagej3dsuite_</artifactId>
                <version>${clijx_assistant_ij3dsuite_extensions.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant-morpholibj_</artifactId>
                <version>${clijx_assistant_morpholibj_extensions.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant-imagej_</artifactId>
                <version>${clijx_assistant_imagej_extensions.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant-imagej2_</artifactId>
                <version>${clijx_assistant_imagej2_extensions.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant-imglib2_</artifactId>
                <version>${clijx_assistant_imglib2_extensions.version}</version>
            </dependency>
            <dependency>
                <groupId>net.haesleinhuepf</groupId>
                <artifactId>clijx-assistant-fiji_</artifactId>
